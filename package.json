{
  "name": "static-content",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bun run nuxt build",
    "dev": "bun run nuxt dev",
    "preview": "bun run nuxt preview",
    "postinstall": "bun run nuxt prepare",
    "lint": "bun run eslint .",
    "lint:fix": "bun run eslint . --fix",
    "format": "bun run prettier --write .",
    "format:check": "bun run prettier --check .",
    "typecheck": "bun run nuxt typecheck",
    "test": "bun run vitest",
    "test:watch": "bun run vitest --watch",
    "test:unit": "bun run vitest --project unit",
    "test:nuxt": "bun run vitest --project nuxt",
    "test:e2e": "bun run playwright test",
    "test:e2e:ui": "bun run playwright test --ui",
    "prepare": "bun run husky",
    "db:generate": "bun run prisma generate",
    "db:migrate": "bun run prisma migrate dev",
    "db:studio": "bun run prisma studio"
  },
  "dependencies": {
    "@iconify-json/lucide": "^1.2.86",
    "@iconify-json/simple-icons": "^1.2.67",
    "@nuxt/a11y": "1.0.0-alpha.1",
    "@nuxt/content": "3.10.0",
    "@nuxt/hints": "1.0.0-alpha.5",
    "@nuxt/image": "2.0.0",
    "@nuxt/scripts": "0.13.2",
    "@nuxt/test-utils": "3.23.0",
    "@nuxt/ui": "^4.4.0",
    "@nuxtjs/i18n": "^10.2.1",
    "@nuxtjs/seo": "^3.3.0",
    "@prisma/client": "^6.19.2",
    "@unhead/vue": "^2.1.2",
    "@vueuse/core": "^14.1.0",
    "@vueuse/nuxt": "^14.1.0",
    "better-sqlite3": "^12.6.2",
    "dayjs": "^1.11.19",
    "fuse.js": "^7.1.0",
    "lint-staged": "^16.2.7",
    "motion-v": "^1.10.0",
    "nuxt": "^4.3.0"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.3.1",
    "@commitlint/config-conventional": "^20.3.1",
    "@nuxt/eslint": "^1.13.0",
    "@playwright/test": "^1.58.0",
    "@valibot/to-json-schema": "^1.5.0",
    "@vue/test-utils": "^2.4.6",
    "eslint": "^9.39.2",
    "happy-dom": "^20.3.7",
    "husky": "^9.1.7",
    "playwright-core": "^1.58.0",
    "prettier": "3.7.4",
    "typescript": "^5.9.3",
    "valibot": "^1.2.0",
    "vitest": "^4.0.18",
    "vue-tsc": "^3.2.3"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx,vue}": [
      "eslint . --fix"
    ],
    "*.{json,md,yaml,yml}": [
      "prettier --write"
    ]
  }
}
